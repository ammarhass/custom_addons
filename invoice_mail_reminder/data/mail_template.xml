<odoo>
    <data>

        <record id="send_first_week_reminder" model="mail.template">
            <field name="name">Invoice: First Week Reminder</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Invoice Payment Reminder</field>
            <field name="email_from">{{(object.company_id.email_formatted)}}</field>
            <field name="partner_to">{{ object.get_first_reminder_recipient_ids() }}</field>

            <field name="body_html" type="html">
                <div style="margin:0px;padding:0px;">
                    <p style="margin:0px;padding:0px;font-size:13px;">
                        Dears,
                        <br/>
                        Invoice Reminder
                    </p>
                </div>

            </field>

        </record>

        <record id="send_second_week_reminder" model="mail.template">
            <field name="name">Invoice: Second Week Reminder</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Invoice Payment Reminder</field>
            <field name="email_from">{{(object.company_id.email_formatted)}}</field>
            <field name="partner_to">{{ object.get_second_reminder_recipient_ids() }}</field>

            <field name="body_html" type="html">
                <div style="margin:0px;padding:0px;">
                    <p style="margin:0px;padding:0px;font-size:13px;">
                        Dears,
                        <br/>
                        Invoice Reminder
                    </p>
                </div>

            </field>

        </record>


    </data>
</odoo>