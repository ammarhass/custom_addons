<odoo>
    <data>

        <record id="inherit_account_move_form_reminder" model="ir.ui.view">
            <field name="name">inherit.account.move.form.reminder</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="reminder_tracker_id" invisible="1"/>
                    <button name="open_invoice_tracker" string="Invoice Tracker" class="oe_stat_button" icon="fa-bars" type="object" invisible="reminder_tracker_id == False"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>