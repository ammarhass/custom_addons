<odoo>
    <data>
        <record id="view_res_config_settings_inherit_employee_nas" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.employee.nas</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='hr']/block[@name='employee_rights_setting_container']" position="after">
                    <block title="Leave Settings" name="leave_settings_container">
                        <div class="row mt16 o_settings_container" name="employee_allowed_days">
                            <div class="col-12 col-lg-6 o_setting_box" id="default_leave_allowed_days_setting_nas">
                                <div class="o_setting_right_pane">
                                    <label for="allowed_days"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                          role="img" aria-label="Values set here are company-specific."
                                          groups="base.group_multi_company"/>
                                    <div class="row">
                                        <div class="text-muted col-lg-8">Set Maximum Allowed Days for Leave
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="allowed_days" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="default_prevent_day_setting_nas">
                                <div class="o_setting_right_pane">
                                    <label for="prevent_day"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                          role="img" aria-label="Values set here are company-specific."
                                          groups="base.group_multi_company"/>
                                    <div class="row">
                                        <div class="text-muted col-lg-8">Set Prevent Day for Leave
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="prevent_day" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </block>
                </xpath>
            </field>
        </record>

    </data>
</odoo>