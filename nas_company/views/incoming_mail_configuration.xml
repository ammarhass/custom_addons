<odoo>
    <data>

        <record id="incoming_mail_config_form_view" model="ir.ui.view">
            <field name="name">incoming.mail.config.form.view</field>
            <field name="model">incoming.mail.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="create_ticket"/>
                        </group>
                        <group>
                            <field name="subject_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="incoming_mail_config_tree_view" model="ir.ui.view">
            <field name="name">incoming.mail.config.tree.view</field>
            <field name="model">incoming.mail.config</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>

                </list>
            </field>
        </record>

        <record id="incoming_mail_config_action" model="ir.actions.act_window">
            <field name="name">Incoming Mail Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">incoming.mail.config</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="incoming_mail_subject_form_view" model="ir.ui.view">
            <field name="name">incoming.mail.subject.form.view</field>
            <field name="model">incoming.mail.subject</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="incoming_mail_subject_tree_view" model="ir.ui.view">
            <field name="name">incoming.mail.subject.tree.view</field>
            <field name="model">incoming.mail.subject</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>

                </list>
            </field>
        </record>

        <record id="incoming_mail_subject_action" model="ir.actions.act_window">
            <field name="name">Incoming Mail Subject</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">incoming.mail.subject</field>
            <field name="view_mode">list,form</field>
        </record>


        <menuitem
                name="Mail Configuration"
                id="root_menu_incoming_mail"
                parent="helpdesk.helpdesk_menu_config"
                groups="nas_company.nas_normal_group"
                sequence="70"/>
        <menuitem
                name="Incoming Mail Configuration"
                id="menu_incoming_mail_configuration"
                parent="root_menu_incoming_mail"
                groups="nas_company.nas_normal_group"
                action="incoming_mail_config_action"
                sequence="10"/>

        <menuitem
                name="Mail Subject"
                id="menu_incoming_mail_subject"
                parent="root_menu_incoming_mail"
                groups="nas_company.nas_normal_group"
                action="incoming_mail_subject_action"
                sequence="20"/>


    </data>
</odoo>