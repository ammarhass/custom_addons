<odoo>
    <data>

        <record id="inherit_project_task_form_view" model="ir.ui.view">
            <field name="name">inherit.project.task.form.view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <xpath expr="//header[1]" position="inside">
                    <button name="open_note_wizard" type="object" string="Enter Note"/>
                     <button name="%(nas_company.action_report_task_cost)d"
                  string="Print Cost Sheet" type="action" class="btn-primary"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="replace">
                    <field name="date_deadline" string="Due Date" groups="nas_company.nas_normal_group"
                           decoration-danger="date_deadline and date_deadline &lt; current_date and state not in ['1_done', '1_canceled']"/>
                    <field name="date_deadline" nolabel="1" groups="!nas_company.nas_normal_group"
                           decoration-danger="date_deadline and date_deadline &lt; current_date and state not in ['1_done', '1_canceled']"/>

                </xpath>
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="team_id" string="Team" groups="nas_company.nas_normal_group"/>
                    <field name="unit_id"/>
                    <field name="task_type_id" string="Task Type"/>
                    <field name="quantity"/>
                    <field name="percentage"/>
                </xpath>
                <xpath expr="//h1[1]" position="after">
                    <h1 class="d-flex justify-content-between align-items-center">
                        <div class="d-flex w-100">
                            <field name="reference_number"/>
                        </div>
                    </h1>

                </xpath>
                 <xpath expr="//notebook" position="inside">
          <page string="Costs">
            <group>
              <field name="cost_line_ids"
                     readonly="1" create="0" edit="0">
                 <list>
                  <field name="user_id"/>
                  <field name="employee_id"/>
                  <field name="quantity"/>
                  <field name="percentage" string="Percentage %"/>
                  <field name="avg_monthly_salary_4m"/>
                  <field name="avg_daily_cost"/>
                  <field name="avg_task_cost"/>
                </list>
                <form>
                  <sheet>
                    <group>
<!--                      <field name="user_id" readonly="1"/>-->
<!--                      <field name="employee_id" readonly="1"/>-->
                    </group>
                    <group>
                      <field name="quantity" readonly="1"/>
                      <field name="percentage" readonly="1" string="Percentage %"/>
                    </group>
                    <group>
                      <field name="avg_monthly_salary_4m" readonly="1"/>
                      <field name="avg_daily_cost" readonly="1"/>
                      <field name="avg_task_cost" readonly="1"/>
                    </group>
                  </sheet>
                </form>
              </field>
            </group>
          </page>
        </xpath>
            </field>
        </record>

        <record id="task_type_edit_form_inherit" model="ir.ui.view">
            <field name="name">task.type.edit.form.inherit</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_ids']" position="after">
                    <field name="allow_stage_ids" widget="many2many_tags"/>
                    <field name="mandatory_message"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>