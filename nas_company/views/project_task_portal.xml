<odoo>
    <data>

        <template id="tindex_installation_portal_my_task_inherit" inherit_id="project.portal_my_task">
            <xpath expr="//span[@t-field='task.stage_id.name']" position="after">

                <div class="form-group row"
                     style="padding-top:50px;">
                    <div class="col-md-8 col-lg-7">
                        <a class="btn btn-primary o_website_form_send o_default_snippet_text"
                           t-att-href="'/my/task/edit/%s' % (task.id)"
                           style="margin-right:5px;width:100px;">
                            Edit
                        </a>
                    </div>
                </div>
            </xpath>

        </template>

    </data>
</odoo>

        <!--t-if="user_can_see_edit and ticket.stage_id.hidden_edit_button != True"-->