<odoo>
    <data>

        <record id="inherit_hr_leave_form_view" model="ir.ui.view">
            <field name="name">inherit.hr.leave.form.view</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='request_unit_half']" position="attributes">

                    <attribute name="invisible">leave_type_request_unit == 'day' or is_permission</attribute>
                </xpath>
                <xpath expr="//div[contains(@class,'o_row_readonly') and contains(@class,'oe_edit_only')]
             //label[@for='request_unit_half']"
                       position="attributes">
                    <attribute name="invisible">leave_type_request_unit == 'day' or is_permission</attribute>
                </xpath>

                <xpath expr="//field[@name='duration_display']" position="before">
                        <field name="permission_slot" invisible="not is_permission"/>
<!--                        <label for="permission_slot" invisible="not is_permission"/>-->
                </xpath>
                <xpath expr="//label[@for='request_unit_half']" position="attributes">

                    <attribute name="invisible">leave_type_request_unit == 'day' or is_permission</attribute>
                </xpath>
                <xpath expr="//field[@name='holiday_status_id']" position="after">
                    <field name="is_permission" invisible="1"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>

