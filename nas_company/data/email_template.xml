<odoo>
    <data>
        <record id="send_update_task_mail" model="mail.template">
            <field name="name">Update: Task Stage Changed</field>
            <field name="model_id" ref="nas_company.model_project_task"/>
            <field name="subject">Task Stage Update</field>
            <field name="email_from">{{(object.company_id.email_formatted)}}</field>
            <field name="partner_to">{{ object.partner_id }}</field>

            <field name="body_html" type="html">
                <div style="margin:0px;padding:0px;">
                    <p style="margin:0px;padding:0px;font-size:13px;">
                        Dears,
                        <br/>
                        Stage for Task <t t-esc="object.name"/>
                        changed to <t t-esc="object.stage_id.name"/>
                    </p>
                </div>

            </field>

        </record>

    </data>
</odoo>
