<odoo>
    <data>

        <record id="employee_section_form_view" model="ir.ui.view">
            <field name="name">employee.section.form.view</field>
            <field name="model">employee.section</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="employee_section_tree_view" model="ir.ui.view">
            <field name="name">employee.section.tree.view</field>
            <field name="model">employee.section</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>

                </list>
            </field>
        </record>

        <record id="employee_section_action" model="ir.actions.act_window">
            <field name="name">Employee Section</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.section</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="root_menu_employee_section" parent="hr.menu_human_resources_configuration" name="Section"
                  groups="nas_company.nas_normal_group"
        />
        <menuitem
                name="Section"
                id="menu_employee_section"
                parent="root_menu_employee_section"
                groups="nas_company.nas_normal_group"
                action="employee_section_action"
                sequence="60"/>


    </data>
</odoo>