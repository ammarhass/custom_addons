<odoo>
    <data>

        <record id="view_commission_details_form" model="ir.ui.view">
            <field name="name">commission.details.form</field>
            <field name="model">commission.details</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,calculated,paid,cancelled"
                               options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoices" type="object"
                                    class="oe_stat_button"
                                    icon="fa-pencil-square-o">
                                <field name="invoice_count" string="Invoices" widget="statinfo"/>
                            </button>

                        </div>

                        <group>
                            <group>
                                <field name="name" string="Reference" readonly="1"/>
                                <field name="employee_id" required="1" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="plan_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="calculation_date" readonly="1"/>
                                <field name="state"/>
                                <field name="company_id" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                        </group>

                        <group string="Commission Period">
                            <group>
                                <field name="date_from" readonly="1"/>
                                <field name="date_to" readonly="1"/>
                            </group>
                        </group>

                        <group string="Sales Performance">
                            <group>
                                <field name="actual_sales_amount" readonly="1" string="Net Sales Amount"/>
                                <field name="target_from" readonly="1"/>
                                <field name="target_to" readonly="1"/>
                            </group>
                            <group>
                                <field name="commission_type" readonly="1"/>
                                <field name="commission_rate" readonly="1" string="Commission Rate"/>
                                <field name="commission_amount" readonly="1"/>
                            </group>
                        </group>

                        <group string="Commission Calculation">

                            <div>
                                <span class="o_form_label">Net Sales Amount × Commission Rate = Commission Amount</span>
                            </div>
                            <div>
                                <span class="o_form_label">
                                    <field name="actual_sales_amount"/>
                                    ×
                                    <field name="commission_rate"/>% =
                                    <field name="commission_amount"/>
                                </span>
                            </div>
                        </group>

                        <group string="Additional Information">
                            <progressbar
                                    value="actual_sales_amount"
                                    max="target_to"

                                    string="Sales Progress"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_commission_details_tree" model="ir.ui.view">
            <field name="name">commission.details.tree</field>
            <field name="model">commission.details</field>
            <field name="arch" type="xml">
                <list string="Commission Details" decoration-success="state=='paid'"
                      decoration-warning="state=='calculated'" decoration-danger="state=='cancelled'">
                    <field name="name" string="Reference"/>
                    <field name="employee_id"/>
                    <field name="plan_id"/>
                    <field name="calculation_date"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="actual_sales_amount" string="Sales Amount"/>
                    <field name="commission_amount" string="Commission"/>
                    <field name="commission_type"/>
                    <field name="invoice_count" widget="statinfo" string="Invoices"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="view_commission_details_pivot" model="ir.ui.view">
            <field name="name">commission.details.pivot</field>
            <field name="model">commission.details</field>
            <field name="arch" type="xml">
                <pivot string="Commission Analysis">
                    <field name="employee_id" type="row"/>
                    <field name="plan_id" type="row"/>
                    <field name="calculation_date" type="col" interval="month"/>
                    <field name="state" type="col"/>
                    <field name="actual_sales_amount" type="measure"/>
                    <field name="commission_amount" type="measure"/>
                    <field name="invoice_count" type="measure"/>
                </pivot>
            </field>
        </record>

