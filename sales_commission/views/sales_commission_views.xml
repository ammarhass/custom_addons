<odoo>
    <data>

        <record id="salesperson_commission_plan_form_view" model="ir.ui.view">
            <field name="name">salesperson.commission.plan.form.view</field>
            <field name="model">salesperson.commission.plan</field>
            <field name="arch" type="xml">
                <form string="Commission Plan">
                    <header>
                        <button string="Approve" class="btn-primary" name="action_approve" type="object"
                                invisible="state != 'draft'" data-hotkey="w"/>
                        <button string="Cancel" class="btn-secondary" name="action_cancel" type="object"
                                invisible="state != 'draft'" data-hotkey="w"/>
<!--                        <button string="Mark as done" class="btn-secondary" name="action_done" type="object"-->
<!--                                invisible="state != 'approved'" data-hotkey="w"/>-->
                        <button string="Reset to draft" class="btn-secondary" name="action_draft" type="object"
                                invisible="state == 'draft'" data-hotkey="d"/>
                        <button string="Create Commission" class="btn-primary" name="create_commission" type="object"
                             invisible="commission_time == False"    data-hotkey="w"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_view_commission_details" type="object"
                                    class="oe_stat_button" icon="fa-dollar" invisible="commission_calculation_count == 0">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Commissions</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Commission Plan"/>
                            <h1>
                                <field name="name" placeholder="i.e. Commissions plan" readonly="state != 'draft'"
                                       class="d-block"/>
                            </h1>
                        </div>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline" readonly="state != 'draft'" force_save="1"/>
                                <i class="oi oi-fw oi-arrow-right"/>
                                <field name="date_to" class="oe_inline" readonly="state != 'draft'" force_save="1"/>
                            </div>
                            <field name="commission_calculation_count" invisible="1"/>
                        </group>
                        <notebook name="commission_line">
                            <page string="Commissions">
                                <group>
                                    <field name="line_ids" readonly="state != 'draft'" nolabel="1">
                                        <list editable="bottom" default_order="target_from">
                                            <field colspan="2" name="target_from" widget="monetary"
                                                   options="{'currency_field': 'currency_id'}"/>
                                            <field colspan="2" name="target_to" widget="monetary"
                                                   options="{'currency_field': 'currency_id'}"/>
                                            <field colspan="1" name="commission_type" string="Type"/>
                                            <field colspan="1" name="commission_amount" readonly="commission_type != 'fixed'"/>
                                            <field colspan="1" name="percentage_value" readonly="commission_type != 'percentage'" widget="percentage"/>
                                            <field name="currency_id" column_invisible="1"/>

                                            <field name="currency_id"
                                                   column_invisible="1"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="salesperson_commission_plan_tree_view" model="ir.ui.view">
            <field name="name">salesperson.commission.plan.tree.view</field>
            <field name="model">salesperson.commission.plan</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </list>
            </field>
        </record>

        <record id="saleperson_commission_plan_action" model="ir.actions.act_window">
            <field name="name">Commission Plans</field>
            <field name="res_model">salesperson.commission.plan</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <!--            <field name="search_view_id" eval='sale_commission_plan_view_search'/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new commission plan
                </p>
                <p>
                    Compute commissions of your salesperson based on their targets
                </p>
            </field>
        </record>

        <menuitem
                id="menu_salesperson_commission"
                name="Salesperson Commissions"
                parent="sale.sale_menu_root"
                sequence="100"/>
        <menuitem
                action="saleperson_commission_plan_action"
                id="salesperson_commission_plan"
                parent="menu_salesperson_commission"
                sequence="10"/>


    </data>
</odoo>
